<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ExpenditureDetailActivity">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/btnGoBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/custum_color" />

    <TextView
            android:id="@+id/tourPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="여행일정이름"
            android:textSize="34sp"
            android:textStyle="bold"/>

    <!-- 지출내역 -->

    <Spinner
            android:id="@+id/daysCategory"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:entries="@array/days_categories"
            android:spinnerMode="dropdown" />

    <!-- 카테고리 버튼들 -->
    <!-- 카테고리 버튼들을 HorizontalScrollView로 감쌈 -->
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

            <Button
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모두 보기" />

            <Button
                    android:id="@+id/btnFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식비" />

            <Button
                    android:id="@+id/btnTransport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="교통비" />

            <Button
                    android:id="@+id/btnLodging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="숙박" />

            <Button
                    android:id="@+id/btnLeisure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여가" />

            <Button
                    android:id="@+id/btnOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타" />
        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExpenses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp" />

    <!-- 지출총계 -->
    <TextView
            android:id="@+id/totalExpenditure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="0원 지출"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="30sp"/>

    <Button
            android:id="@+id/btnSettlementGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_rounded"
            android:text="정산하기"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/sharedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="공유 정보"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:visibility="gone"/> <!-- 초기에는 숨겨져 있도록 -->

</LinearLayout>