<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textViewSignupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginTop="116dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutES"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/signupSuccessBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="136dp"
            android:text="회원가입"
            android:background="@drawable/button_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
            android:id="@+id/linearLayoutES"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSignupTitle"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutPS"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/textView"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="아이디" />

        <EditText
                android:id="@+id/emailSignup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="0dp"
                android:ems="10"
                android:gravity="center_horizontal|center_vertical"
                android:hint="이메일을 입력하세요"
                android:inputType="textEmailAddress"
                 />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutPS"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutES"
            android:layout_marginBottom="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutNS"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="비밀번호" />

        <EditText
                android:id="@+id/passwordSignup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="0dp"
                android:ems="10"
                android:hint="비밀번호를 입력하세요"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutNS"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutPS"
            android:layout_marginBottom="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutNNS"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginStart="30dp" />

        <EditText
                android:id="@+id/nameSignup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="0dp"
                android:ems="10"
                android:hint="이름을 입력하세요"
                android:inputType="text"
                android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutNNS"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutNS"
            android:layout_marginBottom="244dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/textView9"
                android:text="닉네임"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp" />

        <EditText
                android:id="@+id/nicknameSignup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="0dp"
                android:ems="10"
                android:hint="닉네임을 입력하세요"
                android:inputType="text"
                android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>