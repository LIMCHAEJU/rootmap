<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="금액추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountButton"
            app:layout_constraintStart_toEndOf="@+id/memoButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black"
            android:backgroundTint="#90E8A3" />

    <Button
            android:text="메모 추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/memoButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/accountButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FFFB98"
            android:textColor="@color/black" />

    <Button
            android:text="완료"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton2"
            app:layout_constraintStart_toEndOf="@+id/cancleButton2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cancleButton2"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:text="취소"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancleButton2"
            app:layout_constraintStart_toEndOf="@+id/editTextText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/saveButton2"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/dialogListView"
            app:layout_constraintTop_toBottomOf="@+id/editTextText"
            app:layout_constraintBottom_toTopOf="@+id/memoButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="500dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/accountButton"
            app:layout_constraintTop_toBottomOf="@+id/editTextText">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>