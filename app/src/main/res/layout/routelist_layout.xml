<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <Button
            android:id="@+id/addLcationBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경로추가"
            android:backgroundTint="@color/custum_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp" />

    <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/heartLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/locationName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="이름"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingStart="10dp" />

        <TextView
                android:id="@+id/locationAdress"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="TextView"
                android:gravity="center_vertical"
                android:paddingStart="10dp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/heartLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/addLcationBt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/heartClickButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart_empty"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:visibility="gone" />

        <TextView
                android:id="@+id/heartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
    </LinearLayout>

    <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-06-23 12:00:00"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
