<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

    <Button
            android:text="경로추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addLcationBt"
            android:backgroundTint="@color/custum_color"
            app:layout_constraintStart_toEndOf="@+id/commentButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/linearLayout6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/heartClickButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/locationName"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingStart="10dp" />

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/locationAdress"
                android:gravity="center_vertical"
                android:paddingStart="10dp" />
    </LinearLayout>

    <ImageView
            android:src="@drawable/heart_empty"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/heartClickButton"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/commentButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:visibility="gone" />

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/stat_notify_chat"
            android:id="@+id/commentButton"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:tint="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/heartClickButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/addLcationBt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>